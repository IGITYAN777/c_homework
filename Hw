/////////////////////////////////////////////////////////////// Xndir 1

#include <stdio.h>

int main() {

  char x;
  int z = 0;

  do{
    printf("Enter the letter: ");
    scanf(" %c", &x);

      if(65 <= x && x <= 90 || 97 <= x && x <= 122){
        if(x == 65 || x == 69 || x == 73 || x == 79 || x == 85 || x == 97 || x == 101 || 
          x == 105 || x == 111 || x == 117){
          printf("The letter is vowel %c \n", x);
        }else{
          printf("The letter is consonant %c \n", x);
        }
      }else{
        printf("Error \n");
      }
  }while(z == 0);
  

  return 0;
}

/////////////////////////////////////////////////////////////// Xndir 2

#include <stdio.h>

int main() {


  int x = 0;
  int y = 0;
  int z = 0;

  do{
    printf("Enter the first number: ");
    scanf("%d", &x);
    printf("Enter the secnd number: ");
    scanf("%d", &y);

    if(x > y){
      printf("The greatest number is %d \n" , x);
    }else if(x < y){
      printf("The greatest number is %d \n", y);
    }else if(x == y){
      printf("The numbers are equal \n");
    }else{
      printf("Enter numbers");
    }
  }while(z == 0);

  return 0;
}

/////////////////////////////////////////////////////////////// Xndir 3

#include <stdio.h>

int main() {

  int x = 0;
  int y = 0;
  int z = 0;

  do{
    printf("Enter the first number: ");
    scanf("%d", &x);
    printf("Enter the secnd number: ");
    scanf("%d", &y);
    printf("Enter the third number: ");
    scanf("%d", &z);

    if(x == y && x > z){
      printf("The greatest number is %d \n" , x);
    }else if(x == y && x < z){
      printf("The greatest number is %d \n", z);
    }else if(x == z && x > y){
      printf("The greatest number is %d \n", x);
    }else if(x == z && x < y){
      printf("The greatest number is %d \n", y);
    }else if(y == z && y > x){
      printf("The greatest number is %d \n", y);
    }else if(x == z && y < x){
      printf("The greatest number is %d \n", x);
    }else{
      printf("Enter numbers");
    }
  }while(z == 0);

  return 0;
}
